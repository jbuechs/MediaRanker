<% if media.errors.any? %>
  <h4>The form has <%=pluralize(media.errors.count, "error") %>:</h4>
  <ul>
    <% media.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="row">
  <div class="col-lg-12">
    <h2><%= yield(:title) %></h2>
    <%= form_for media, :html => {:class => "form-group"} do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control', :required => true %>
      <%= f.label who_by %>
      <%= f.text_field :creator, class: 'form-control', :required => true %>
      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control' %>
      <%= f.submit value: "Save", class: "btn btn-default"%>
    <% end %>
  </div>
</div>
