<div class="row">
  <div class="col-lg-12">
    <h1><%= object.title %> <small><%= yield(:who_by) %> <%= by %></small> </h1>
    <h4>Upvotes: <%= object.upvotes %></h4>
    <p><%= object.description %></p>
    <%= button_to "Upvote", polymorphic_path([:upvote, object]), method: :post, class: "btn btn-primary" %>
    <%= link_to "Edit #{object.title}", edit_polymorphic_path(object), method: :get, class: "btn btn-default" %>
    <%= link_to "DELETE", polymorphic_path(object), method: :delete, data: { confirm: "Are you sure you want to delete #{object.title}?"}, class: "btn btn-danger" %>
    <%= link_to "View all #{object.class}s", polymorphic_path(object.class.to_s.downcase.pluralize), class: "btn btn-default" %>
    <%= link_to "View all Media", root_path, class: "btn btn-default" %>
  </div>
</div>
