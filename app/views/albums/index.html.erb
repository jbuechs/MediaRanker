<div class="row">
  <div class="col-lg-12">
    <table class="table table-hover">
      <thead>
        <tr>
          <td>Ranking</td>
          <td>Name</td>
          <td>Upvote</td>
        </tr>
      </thead>
      <tbody>
        <% @albums.each do |album| %>
        <tr>
          <td>Upvotes: <%= album.upvotes %></td>
          <td><%= link_to album.title, album_path(album) %></td>
          <td><%= button_to "Upvote", upvote_album_path(album), method: :post, class: "btn btn-default" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to "View All Media", root_path, class: "btn btn-default" %>
    <%= link_to "Add an Album", new_album_path, class: "btn btn-default" %>
  </div>
</div>
