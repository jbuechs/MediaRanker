<div class="row">
  <div class="col-lg-12">
    <table class="table table-hover">
      <thead>
        <tr>
          <td>Ranking</td>
          <td>Name</td>
          <td>Upvote</td>
        </tr>
      </thead>
      <tbody>
        <% @movies.each do |movie| %>
        <tr>
          <td>Upvotes: <%= movie.upvotes %></td>
          <td><%= link_to movie.title, movie_path(movie) %></td>
          <td><%= button_to "Upvote", upvote_movie_path(movie), method: :post, class: "btn btn-default" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to "View All Media", root_path, class: "btn btn-default" %>
    <%= link_to "Add a Movie", new_movie_path, class: "btn btn-default" %>
  </div>
</div>
