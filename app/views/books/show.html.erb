<div class="row">
  <div class="col-lg-12">
    <h1><%= @book.title %> <small>Written by: <%= @book.author %></small> </h1>
    <h4>Upvotes: <%= @book.upvotes %></h4>
    <p><%= @book.description %></p>
    <%= button_to "Upvote", upvote_book_path(@book), method: :post, class: "btn btn-default" %>
    <%= link_to "Edit #{@book.title}", edit_book_path(@book), method: :get, class: "btn btn-default" %>
    <%= link_to "DELETE", book_path(@book), method: :delete, data: { confirm: "Are you sure you want to delete #{@book.title}?"}, class: "btn btn-danger" %>
    <%= link_to "View all Books", books_path, class: "btn btn-default" %>
    <%= link_to "View all Media", root_path, class: "btn btn-default" %>
  </div>
</div>
